{% if pageCount > 1 %}
    <div id="pagination" class="sixteen columns center">
        <div class="buttons left">
            {% if first is defined and current != first %}
                <span class="first">
                    <a href="{{ path(route, query|merge({'page': first}))|replace({'%20': '+'}) }}" class="button">&lt;&lt;</a>
                </span>
            {% endif %}

            {% if previous is defined %}
                <span class="previous">
                    <a href="{{ path(route, query|merge({'page': previous}))|replace({'%20': '+'}) }}" class="button">&lt;</a>
                </span>
            {% endif %}
            &nbsp;
        </div>

        {% for page in pagesInRange %}
            {% if page != current %}
                <span class="page">
                    <a href="{{ path(route, query|merge({'page': page}))|replace({'%20': '+'}) }}" class="button">{{ page }}</a>
                </span>
            {% else %}
                <span class="current">{{ page }}</span>
            {% endif %}

        {% endfor %}

        <div class="buttons right">
            &nbsp;
            {% if next is defined %}
                <span class="next">
                    <a href="{{ path(route, query|merge({'page': next}))|replace({'%20': '+'}) }}" class="button">&gt;</a>
                </span>
            {% endif %}
                
            {% if last is defined and current != last %}
                <span class="last">
                    <a href="{{ path(route, query|merge({'page': last}))|replace({'%20': '+'}) }}" class="button">&gt;&gt;</a>
                </span>
            {% endif %}
        </div>
    </div>
{% endif %}